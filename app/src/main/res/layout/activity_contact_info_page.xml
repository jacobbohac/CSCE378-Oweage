<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jacob.oweage.ContactInfoPage">

    <TextView android:text="Contact Name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ContactName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />

    <TextView
        android:text="Contact Relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/ContactName"
        android:layout_alignRight="@+id/ContactName"
        android:layout_alignEnd="@+id/ContactName" />

    <ScrollView
        android:layout_width="1000dp"
        android:layout_height="100dp"
        android:id="@+id/scrollView"
        android:layout_below="@+id/textView2" />

</RelativeLayout>
